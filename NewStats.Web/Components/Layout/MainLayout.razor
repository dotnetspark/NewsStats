@inherits LayoutComponentBase

<div class="min-h-screen bg-gray-100">
    <nav class="bg-white shadow-md">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between h-16">
                <a href="/" class="text-2xl font-bold text-blue-600">📰 NewStats</a>
                <div class="flex items-center gap-6">
                    <NavLink href="/" Match="NavLinkMatch.All" class="text-gray-600 hover:text-blue-600 transition-colors">
                        Search
                    </NavLink>
                    <NavLink href="/stats" class="text-gray-600 hover:text-blue-600 transition-colors">
                        Stats
                    </NavLink>
                </div>
            </div>
        </div>
    </nav>

    <main class="py-4">
        @Body
    </main>

    <footer class="bg-white border-t border-gray-200 py-4 mt-8">
        <div class="container mx-auto px-4 text-center text-gray-500 text-sm">
            NewStats - A Blazor News Search & Metrics App
        </div>
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
