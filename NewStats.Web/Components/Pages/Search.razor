@page "/"
@page "/search"
@using NewStats.Web.Models
@using NewStats.Web.Services
@inject NewsApiService NewsApiService
@inject RedisCacheService CacheService
@inject SessionMetricsService MetricsService
@inject NavigationManager NavigationManager

<PageTitle>Search News - NewStats</PageTitle>

<div class="container mx-auto px-4 py-8">
    <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">NewStats</h1>
        <p class="text-gray-600">Search and track news articles</p>
    </div>

    <div class="max-w-2xl mx-auto mb-8">
        <div class="flex gap-2">
            <input type="text" 
                   @bind="searchQuery" 
                   @bind:event="oninput"
                   @onkeypress="HandleKeyPress"
                   placeholder="Search for news articles..."
                   class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
            <button @onclick="SearchAsync" 
                    disabled="@isLoading"
                    class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 disabled:bg-blue-400 transition-colors">
                @if (isLoading)
                {
                    <span>Searching...</span>
                }
                else
                {
                    <span>Search</span>
                }
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="max-w-2xl mx-auto mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
            @errorMessage
        </div>
    }

    @if (articles.Any())
    {
        <div class="mb-4 text-gray-600 text-center">
            Found @articles.Count articles for "@currentQuery"
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var article in articles)
            {
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow cursor-pointer"
                     @onclick="() => ViewArticle(article)">
                    @if (!string.IsNullOrEmpty(article.UrlToImage))
                    {
                        <img src="@article.UrlToImage" alt="@article.Title" class="w-full h-48 object-cover" 
                             onerror="this.style.display='none'" />
                    }
                    else
                    {
                        <div class="w-full h-48 bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
                            <span class="text-white text-4xl">üì∞</span>
                        </div>
                    }
                    <div class="p-4">
                        <div class="flex items-center justify-between mb-2">
                            <span class="text-xs text-blue-600 font-semibold uppercase">@article.Source</span>
                            <span class="text-xs text-gray-500">@article.PublishedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                        <h2 class="text-lg font-bold text-gray-800 mb-2 line-clamp-2">@article.Title</h2>
                        <p class="text-gray-600 text-sm line-clamp-3">@article.Description</p>
                        @{
                            var clickCount = MetricsService.GetClickCount(article.Id);
                            if (clickCount > 0)
                            {
                                <div class="mt-3 text-xs text-gray-500">
                                    üëÅÔ∏è Viewed @clickCount time(s)
                                </div>
                            }
                        }
                    </div>
                </div>
            }
        </div>
    }
    else if (!isLoading && string.IsNullOrEmpty(errorMessage))
    {
        <div class="text-center text-gray-500 py-12">
            <div class="text-6xl mb-4">üîç</div>
            <p>Enter a search term to find news articles</p>
        </div>
    }
</div>

@code {
    private string searchQuery = "";
    private string currentQuery = "";
    private List<Article> articles = new();
    private bool isLoading = false;
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        // Try to restore the last search from cache
        var lastQuery = await CacheService.GetLastSearchQueryAsync();
        if (!string.IsNullOrEmpty(lastQuery))
        {
            searchQuery = lastQuery;
            var cachedResults = await CacheService.GetSearchResultsAsync(lastQuery);
            if (cachedResults != null)
            {
                articles = cachedResults.Articles;
                currentQuery = cachedResults.Query;
            }
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchAsync();
        }
    }

    private async Task SearchAsync()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            return;
        }

        isLoading = true;
        errorMessage = "";
        articles.Clear();

        try
        {
            // Check cache first
            var cachedResults = await CacheService.GetSearchResultsAsync(searchQuery);
            if (cachedResults != null)
            {
                articles = cachedResults.Articles;
                currentQuery = searchQuery;
            }
            else
            {
                // Fetch from API
                articles = await NewsApiService.SearchArticlesAsync(searchQuery);
                currentQuery = searchQuery;

                // Cache the results
                if (articles.Any())
                {
                    await CacheService.CacheSearchResultsAsync(searchQuery, articles);
                }
            }

            // Save the last search query
            await CacheService.SetLastSearchQueryAsync(searchQuery);
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while searching. Please try again.";
            Console.WriteLine($"Search error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ViewArticle(Article article)
    {
        // Record the click
        MetricsService.RecordClick(article.Id);
        
        // Cache the article for the detail view
        await CacheService.CacheArticleAsync(article);
        
        // Navigate to article detail
        NavigationManager.NavigateTo($"/article/{article.Id}");
    }
}
