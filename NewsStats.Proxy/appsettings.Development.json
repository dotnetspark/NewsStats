{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Order": 1,
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          },
          {
            "RequestHeader": "X-Forwarded-By",
            "Set": "YARP-Proxy"
          }
        ]
      },
      "client-route": {
        "ClusterId": "client-cluster",
        "Order": 2,
        "Match": {
          "Path": "/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "api-cluster": {
        "Destinations": {
          "api": {
            "Address": "http://api"
          }
        }
      },
      "client-cluster": {
        "Destinations": {
          "client": {
            "Address": "http://client"
          }
        }
      }
    }
  }
}
